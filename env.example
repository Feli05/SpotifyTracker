# Application Ports
# Ports for the web application and ML service
WEB_PORT=3000
ML_PORT=5000
# URLs for API connectivity
NEXT_PUBLIC_APP_URL=http://localhost:3000 # Web app URL (must match WEB_PORT)
ML_SERVICE_URL=http://localhost:5000 # ML service URL (must match ML_PORT)
# For Docker: ML_SERVICE_URL=http://ml-service:5000

# Supabase Configuration
# Get these values from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Spotify API Configuration
# Register your application at https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
# This should match the redirect URI configured in your Spotify Developer Dashboard
SPOTIFY_REDIRECT_URI=http://localhost:3000/api/spotify/callback

# MongoDB Atlas Connection
# Get your connection string from MongoDB Atlas
MONGODB_URI=your_mongodb_atlas_connection_string 